{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.1.*",
		"codesleeve/platform-core": "dev-master",
		"codesleeve/platform-publish": "dev-master"
	},
	"require-dev": {
		"phpspec/phpspec": "2.0.*@dev"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
			"php artisan migrate --package codesleeve/platform-core",
			"php artisan db:seed --class \"Codesleeve\\Platform\\Seeds\\Platform\"",
			"php artisan platform:setup",
			"php artisan migrate --package codesleeve/platform-publish"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
