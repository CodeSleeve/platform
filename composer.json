{
	"name": "codesleeve/platform",
	"description": "The base platform for codesleeve. This is a starter kit for Laravel 4.1",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.1.*",
		"codesleeve/asset-pipeline": "dev-master",
		"codesleeve/stapler": "dev-master",
		"machuga/authority-l4" : "dev-master",
		"way/generators": "dev-master",
		"loic-sharma/profiler": "1.1.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],
		"psr-0" : {
			"Codesleeve\\Platform" : "app"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate",
			"php artisan dump-autoload",
 			"php artisan platform:setup",
 			"php artisan migrate --seed"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
